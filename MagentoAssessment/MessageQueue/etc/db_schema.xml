<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="tracking_item" resource="default" engine="innodb" comment="Custom Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="sku" nullable="false" length="255" comment="SKU"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="true" comment="Customer ID or NULL for Guest"/>
        <column xsi:type="int" name="quote_id" unsigned="true" nullable="false" comment="Customer's Quote ID"/>
        <column xsi:type="datetime" name="created" nullable="false" comment="Record Creation Date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
